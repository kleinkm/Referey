<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_checked="true" android:state_pressed="true"     
        android:drawable="@drawable/sort_up_pressed" />
  <item android:state_checked="true" android:state_focused="true"                           
        android:drawable="@drawable/sort_up_focused" />
  <item android:state_checked="true" android:state_focused="false"     
        android:drawable="@drawable/sort_up_normal" />

  <item android:state_checked="false" android:state_pressed="true" 
        android:drawable="@drawable/sort_down_pressed" />
  <item android:state_checked="false" android:state_focused="true" 
        android:drawable="@drawable/sort_down_focused" />
  <item android:state_checked="false" android:state_focused="false" 
        android:drawable="@drawable/sort_down_normal" />

  <item android:drawable="@drawable/sort_up_normal" />
</selector>
